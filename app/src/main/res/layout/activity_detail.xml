<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity"
    style="@style/backgroundStyle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/ivMotorbikeImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="16dp"/>

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_toEndOf="@+id/ivMotorbikeImage"
                    style="@style/CategoryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model Name"
                    android:textSize="32sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvCompany"
                    style="@style/CategoryTextStyle"
                    android:layout_toRightOf="@+id/ivMotorbikeImage"
                    android:layout_below="@+id/tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Company" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/CategoryTextStyle"
                    android:layout_toRightOf="@+id/ivMotorbikeImage"
                    android:layout_below="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$Price" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/white"

                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Description" />

            <Button
                android:id="@+id/btShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minHeight="0dp"

                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:text="Show more"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>