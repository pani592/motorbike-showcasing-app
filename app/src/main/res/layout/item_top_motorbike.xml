<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTopBike"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="8dp"
            />

            <ImageView
                android:id="@+id/ivMotorbikeImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/cvTopBike"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tvModelName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/ivMotorbikeImage"
                android:layout_centerHorizontal="true"

                android:text="Model"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvTimesViewed"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvModelName"
                android:layout_centerHorizontal="true"

                android:text="Views"
                android:textColor="@color/black"
                />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

